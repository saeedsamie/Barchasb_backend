{
  "info": {
    "_postman_id": "barchasb-backend-collection",
    "name": "Barchasb Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Management",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [],
            "body": {"mode": "raw", "raw": "{\"name\": \"testuser\", \"password\": \"password123\", \"points\": 100}"},
            "url": {
              "raw": "{{base_url}}/users/signup",
              "host": ["{{base_url}}"],
              "path": ["users", "signup"]
            }
          }
        },
        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [],
            "body": {"mode": "raw", "raw": "{\"name\": \"testuser\", \"password\": \"password123\"}"},
            "url": {
              "raw": "{{base_url}}/users/login",
              "host": ["{{base_url}}"],
              "path": ["users", "login"]
            }
          }
        },
        {
          "name": "Get User Information",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {
              "raw": "{{base_url}}/users/user/",
              "host": ["{{base_url}}"],
              "path": ["users", "user"]
            }
          }
        },
        {
          "name": "Update User Information",
          "request": {
            "method": "PUT",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "body": {"mode": "raw", "raw": "{\"new_name\": \"updated_user\"}"},
            "url": {
              "raw": "{{base_url}}/users/user/",
              "host": ["{{base_url}}"],
              "path": ["users", "user"]
            }
          }
        },
        {
          "name": "Change User Password",
          "request": {
            "method": "PUT",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "body": {"mode": "raw", "raw": "{\"new_password\": \"newpassword123\"}"},
            "url": {
              "raw": "{{base_url}}/users/user/password",
              "host": ["{{base_url}}"],
              "path": ["users", "user", "password"]
            }
          }
        },
        {
          "name": "Get Leaderboard",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {
              "raw": "{{base_url}}/users/leaderboard",
              "host": ["{{base_url}}"],
              "path": ["users", "leaderboard"]
            }
          }
        }
      ]
    },
    {
      "name": "Task Management",
      "item": [
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "body": {"mode": "raw", "raw": "{\"type\": \"image_classification\", \"data\": \"image_url.jpg\", \"point\": 10, \"tags\": [\"tag1\", \"tag2\"], \"is_done\": false}"},
            "url": {
              "raw": "{{base_url}}/tasks/new",
              "host": ["{{base_url}}"],
              "path": ["tasks", "new"]
            }
          }
        },
        {
          "name": "Fetch Task Feed",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {
              "raw": "{{base_url}}/tasks/feed?limit=5",
              "host": ["{{base_url}}"],
              "path": ["tasks", "feed"],
              "query": [{"key": "limit", "value": "5"}]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {"key": "base_url", "value": "http://127.0.0.1:8000"},
    {"key": "access_token", "value": ""}
  ]
}

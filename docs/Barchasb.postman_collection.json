    {
      "name": "Task Management",
      "item": [
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"image_classification\",\n  \"data\": \"image_url.jpg\",\n  \"point\": 10,\n  \"tags\": [\"tag1\", \"tag2\"],\n  \"is_done\": false\n}"
            },
            "url": {
